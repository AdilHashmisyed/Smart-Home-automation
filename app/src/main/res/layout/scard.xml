<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp">

        <RelativeLayout

            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4c4c4c">

            <ImageView
                android:id="@+id/swImage"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="#ffffff"
                android:clickable="true"
                android:src="@drawable/qr"
                android:tint="@android:color/black" />


            <TextView
                android:id="@+id/swNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/swName"
                android:layout_alignStart="@+id/swName"
                android:layout_below="@+id/swName"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="4dp"
                android:text="TextView"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/swName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/swImage"
                android:layout_marginLeft="12dp"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!--Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/swImage"
                android:layout_alignRight="@+id/swImage"
                android:layout_alignBottom="@+id/swImage"
                android:layout_alignParentTop="true"
                android:layout_marginTop="170dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="-18dp"
                android:text="Switch" /-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
